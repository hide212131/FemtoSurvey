{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./src",
    "baseUrl": "./",
    "rootDir": "src/lib",
    "paths": {
      "src": ["src/lib"]
    }
  },
  "include": ["src/lib/**/*.ts"],
  "exclude": []
}
